            <li class="nav-item btn-outline-primary">
              <a href="/login" class="btn btn-danger">Login</a>
            </li>
            <li class="nav-item">
              <a href="/signup" class="btn btn-warning">Sign-up</a>
            </li>
          <% } %>
            
          <!-- Would be weird to have users the options to login or sign-out
            if they're already logged in. Status is 1 if session is active.-->
          <% if (locals.status == 1) { %>
            <li class="">
                <a href="/logout" class="btn btn-danger">Logout</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
