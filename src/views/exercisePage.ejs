    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.6/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/css/global.css" />
  </head>
  <body>
    <%- include("templates/header") %>
    <div id="calendar"></div>
    <h2>Your week so far:</h2>
    <!-- Tab links -->
    <div class="tab">
      <button class="tablinks active" id="defaultOpen" onclick="openLog(event, 'activityChart')">Weekly Stats</button>
      <button class="tablinks" onclick="openLog(event, 'logs')">Daily Log</button>
    </div>

    <!-- Tab content -->
    <div id="activityChart" class="tabcontent">
      <div class="container">
        <canvas id="chart"></canvas>
      </div>
    </div>

    <div id="logs" class="tabcontent">
      <div id="dailyLogs"></div>
    </div>

    <br>
    <div class="center-content">
      <p>
        <a
				  class="btn btn-lg text-white btn-block"
          style="background: linear-gradient(#F9858b, #F985B9);"
          onclick="window.location.href='exerciseForm'"
          role="button"
        >Add Activity &raquo;</a
        >
      </p>
    </div>
    	<%- include("templates/footer") %>
    <script src="/js/exercisePage.js"></script>
  </body>
